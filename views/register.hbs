<div class="main">
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Sign up</h2>
                    <form action="/auth/register" method="POST" class="register-form" id="register-form">
                        <div class="form-group">
                            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input type="text" name="usr" id="name" placeholder="Username" required/>
                        </div>
                        <div class="form-group">
                            <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                            <input type="password" name="pwd" id="pass" placeholder="Password" required/>
                        </div>
                        <div class="form-group">
                            <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                            <input type="password" name="pwd2" id="re_pass" placeholder="Repeat your password" required/>
                        </div>
                        {{#if err}}
                        <div class="alert alert-info" style="background-color: rgb(168, 220, 230); color:rgb(177, 72, 72); ">
                            <strong>{{err}}</strong>
                        </div>
                        {{/if}}
                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                        </div>
                    </form>
                </div>
                <div class="signup-image">
                    <figure><img src="/login/images/signup-image.jpg" alt="sing up image"></figure>
                    <a href="/auth/login" class="signup-image-link">I am already member</a>
                </div>
            </div>
        </div>
    </section>
</div>