<!--================Header Menu Area =================-->

<main class="site-main">
  <!--================Hero Banner start =================-->
  <section class="mb-30px">
    <div class="container">
      <div class="hero-banner">
        <div class="hero-banner__content">
          <h3>Welcome to MOH</h3>
          <h1>Moments Of History</h1>
          <h4>This is a website to connect people who love history. </h4>
        </div>
      </div>
    </div>
  </section>
  <!--================Hero Banner end =================-->
  <!--================ Start Blog Post Area =================-->
  <section class="blog-post-area section-margin mt-4">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          {{#each articles}}
          <div class="single-recent-blog-post">
            <div class="thumb">
              <img class="img-fluid" src="/uploads/{{articleImage}}" alt="Article Image" style="width: 730px; height: 400px; object-fit: cover;">
              <ul class="thumb-info" style=" height: 33px; width: 370px; margin-bottom: 0px;">
                <li><i class="fa fa-user" aria-hidden="true"> {{author.name}}</i></li>
                <li><i class="fa fa-eye" aria-hidden="true"> {{views}} views</i></li>
                <li><i class="fa fa-calendar" aria-hidden="true"> {{moment timeCreated format ="MMMM DD - YYYY"}}</i>
                </li>
              </ul>
            </div>
            <div class="details mt-20">
              <h2>{{name}}</h2>
              <p class="tag-list-inline">Tag:{{#each tag_id}} <a href="/list_articleByTag/{{_id}}"> #{{name}} </a>
                {{/each}} </p>
              <p>{{desc}}</p>
              <a class="button" href="/blog_detail/{{_id}}">Read More <i class="ti-arrow-right"></i></a>
            </div>
          </div>
          {{else}}
          <div class="alert alert-info">No result</div>
          {{/each}}
          <div class="row">
            <div class="col-lg-12">
              <nav class="blog-pagination justify-content-center d-flex">
                <ul class="pagination">
                  {{#paginate pagination type="first"}}
                  <li {{#if disabled}}class="disabled" {{/if}}><a href="/?page={{n}}">First</a></li>
                  {{/paginate}}
                  {{#paginate pagination type="previous"}}
                  <li {{#if disabled}}class="disabled" {{/if}}><a href="/?page={{n}}">Prev</a></li>
                  {{/paginate}}
                  {{#paginate pagination type="middle" limit="6"}}
                  <li {{#if active}}class="active" {{/if}}><a href="/?page={{n}}">{{n}}</a></li>
                  {{/paginate}}
                  {{#paginate pagination type="next"}}
                  <li {{#if disabled}}class="disabled" {{/if}}><a href="/?page={{n}}">Next</a></li>
                  {{/paginate}}
                  {{#paginate pagination type="last"}}
                  <li {{#if disabled}}class="disabled" {{/if}}><a href="/?page={{n}}">Last</a></li>
                  {{/paginate}}
                </ul>
              </nav>
            </div>
          </div>
        </div>

        <!-- Start Blog Post Siddebar -->
        <div class="col-lg-4 sidebar-widgets">
          <div class="widget-wrap">
            <div class="single-sidebar-widget search-widget">
              <h4 class="single-sidebar-widget__title">Search</h4>
              <div class="form-group mt-30">
                <div class="col-autos">
                  <form action="/do_search" method="GET">
                    <input id="se" type="text" name="search" placeholder="Search..." required />
                  </form>
                </div>
              </div>
            </div>

            <div class="single-sidebar-widget post-category-widget">
              <h4 class="single-sidebar-widget__title">Category</h4>
              <ul class="cat-list mt-20">
                {{#each categories}}
                <li>
                  <a href="/list_articleByCategory/{{_id}}" class="d-flex justify-content-between">
                    <p>{{name}}</p>
                  </a>
                </li>
                {{/each}}
              </ul>
            </div>

            <div class="single-sidebar-widget popular-post-widget">
              <h4 class="single-sidebar-widget__title">Recent Post</h4>
              <div class="popular-post-list">
                {{#each popularArticles}}
                <div class="single-post-list">
                  <div class="thumb">
                    <img class="card-img rounded-0" src="/uploads/{{articleImage}}" alt="" style="height: 133.39px;">
                    <ul class="thumb-info" style="margin-bottom: 0px;">
                      <li>{{author.name}}</li>
                      <li>{{moment timeCreated format ="MMM DD"}}</li>
                    </ul>
                  </div>
                  <div class="details mt-20">
                    <a href="/blog_detail/{{_id}}">
                      <h6>{{name}}</h6>
                    </a>
                  </div>
                </div>
                {{else}}
                <div class="alert alert-info">There are no content available</div>
                {{/each}}
              </div>
            </div>

            <div class="single-sidebar-widget tag_cloud_widget">
              <h4 class="single-sidebar-widget__title">Tag</h4>
              <ul class="list">
                {{#each tags}}
                <li>
                  <a href="/list_articleByTag/{{_id}}">#{{name}}</a>
                </li>
                {{/each}}
              </ul>
            </div>
          </div>
          <!-- End Blog Post Siddebar -->
        </div>
        <!-- End Blog Post Siddebar -->
  </section>
  <!--================ End Blog Post Area =================-->
</main>

